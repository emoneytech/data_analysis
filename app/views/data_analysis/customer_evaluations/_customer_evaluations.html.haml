.col-md-12
  .card.card-primary.card-outline
    .card-header
      %h3.card-title
        = fa_icon CustomerEvaluation.icon
        = t(:listing_resource, resource: CustomerEvaluation.model_name.human(:count => 2))
    .card-body
      = render "data_analysis/customer_evaluations/table", customer_evaluations: customer_evaluations
    .card-footer.clearfix
      .form-row
        .col-md-12
          = paginate customer_evaluations, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0', remote: true
