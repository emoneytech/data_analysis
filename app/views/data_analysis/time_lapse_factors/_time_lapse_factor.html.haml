.card.card-outline.card-success
  .card-header
    %h3.card-title
      %i.fas.fa-exclamation-triangle
      #{time_lapse_factor.anagrafica.full_name} - 
      = t(:show_resource, resource: TimeLapseFactor.model_name.human)
  .card-body
    %dl.row
      - for attribute in time_lapse_factor.attributes.keys
        %dt.col-md-4.text-right= attribute.humanize
        %dd.col-md-8= time_lapse_factor.attributes[attribute] && time_lapse_factor.attributes[attribute] != '' && time_lapse_factor.attributes[attribute] != '""'? time_lapse_factor.attributes[attribute].to_s : ' - '


