.card.card-outline.card-primary
  .card-header
    %h3.card-title
      = fa_icon Boundary.icon
      #{Boundary.model_name.human}
  .card-body
    %dl.form-row
      - for attribute in boundary.attributes.keys
        %dt.col-md-4.text-right= attribute.humanize
        %dd.col-md-8= boundary.attributes[attribute] && boundary.attributes[attribute] != '' && boundary.attributes[attribute] != '""'? boundary.attributes[attribute].to_s : ' - '


