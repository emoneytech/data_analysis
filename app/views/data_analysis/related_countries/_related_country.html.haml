.card.card-primary.card-outline
  .card-header
    %h3.card-title
      %i.fas.fa-globe
      #{related_country.name}
    .card-tools
      = link_to fa_icon('edit'), [:edit, :data_analysis, related_country], class: "btn btn-xs btn-warning", data:{toggle: "tooltip"}, title: 'Edit'
  .card-body
    %dl.form-row
      - for attribute in related_country.attributes.keys
        %dt.col-md-4.text-right= attribute.humanize
        %dd.col-md-8= related_country.attributes[attribute]
  .card-footer
    .row
      .col-md-6
        = link_to 'Prev', [:data_analysis, @prev] unless @prev.blank?
      .col-md-6.text-right
        = link_to 'Next', [:data_analysis, @next] unless @next.blank?

= render "base/audits", audits: related_country.audits if related_country.audits.any?