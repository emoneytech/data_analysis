.col-md-12
  .card
    .card-header
      %h3.card-title
        %i.fas.fa-globe
        = t(:counries, default: 'Countries')
    .card-body
      = render "data_analysis/related_countries/table", related_countries: @related_countries
    .card-footer.clearfix
      .form-row
        .col-md-4= page_entries_info @related_countries
        .col-md-8
          = paginate @related_countries, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'
