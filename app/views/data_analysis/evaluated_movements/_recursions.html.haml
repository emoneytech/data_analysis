.col-md-12
  .card
    .card-header
      %h3.card-title
        %i.fas.fa-search-dollar
        = t(:listing_resource, resource: "Recursions")
        for 
        %strong=params[:q]
        in
        %strong=params[:days]
        days
      .card-tools
        %button{type: "button", class: "btn btn-tool", "data-card-widget" => "maximize"}
          %i.fas.fa-expand
        %button{type: "button", class: "btn btn-tool", "data-card-widget" => "collapse"}
          %i.fas.fa-plus
    .card-body
      = render "table_recursions", recursions: recursions
    .card-footer.clearfix
      .row
        .col-md-4
          = page_entries_info recursions
        .col-md-8
          = paginate recursions, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'
