.card.card-outline.card-primary
  .card-header
    %h3.card-title
      %i.fas.fa-search-dollar
      = t(:listing_resource, resource: EvaluatedMovement.model_name.human(:count => 2))
    .card-tools
      %button{type: "button", class: "btn btn-tool", "data-card-widget" => "maximize"}
        %i.fas.fa-expand
      %button{type: "button", class: "btn btn-tool", "data-card-widget" => "collapse"}
        %i.fas.fa-plus
  .card-body
    = render "table", evaluated_movements: evaluated_movements
  .card-footer.clearfix
    .row
      .col-md-4
        = page_entries_info evaluated_movements
      .col-md-8
        = paginate evaluated_movements, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'
