.col-md-12
  .card
    .card-header
      %h3.card-title
        = fa_icon Mandato.icon
        = t(:listing_resource, resource: Mandato.model_name.human(:count => 2))
    .card-body
      = render "data_analysis/mandati/table", mandati: @mandati
    .card-footer.clearfix
      .row
        .col-md-4
          = page_entries_info @mandati
        .col-md-8
          = paginate @mandati, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0', total_pages: @cached_total_pages
