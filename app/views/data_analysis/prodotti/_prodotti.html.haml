.col-md-12
  .card
    .card-header
      %h3.card-title
        %i.fa.fa-store-alt
        = t(:listing_resource, resource: Prodotto.model_name.human(:count => 2))
    .card-body
      = render "table", prodotti: @prodotti
    .card-footer.clearfix
      .row
        .col-md-12
          = paginate @prodotti, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0', total_pages: @cached_total_pages
