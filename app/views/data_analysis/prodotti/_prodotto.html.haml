.card.card-success
  .card-header
    %h3.card-title
      %i.fa.fa-exchange-alt
      #{Prodotto.model_name.human} #{@prodotto.name}
    .spacer
  .card-body
    %dl.row
      - for attribute in prodotto.attributes.keys
        %dt.col-md-4.text-right= attribute.humanize
        %dd.col-md-8= prodotto.attributes[attribute] && prodotto.attributes[attribute] != '' && prodotto.attributes[attribute] != '""'? prodotto.attributes[attribute].to_s : ' - '


