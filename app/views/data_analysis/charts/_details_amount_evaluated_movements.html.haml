#card-details-amount-evaluated-movements.card.card-outline.card-warning
  .card-header
    .card-title
      .input-group.input-group-sm{style: "width: 220px"}
        .input-group-prepend
          %span#details-amount-opts.input-group-text= opts[:filter][:in_out]
        %input#day.form-control{type: 'text', readonly: true, value: "#{opts[:filter][:daterange]}", width: "40"}
    .card-tools
      .btn-group.btn-group-sm.btn-group-toggle.m-0{"data-toggle" => "buttons"}
        %label.btn.btn-outline-warning
          %input{:autocomplete => "off", :checked => "checked", :name => "details-amount-directions", value: "ALL", :type => "radio"}/
          ALL
        %label.btn.btn-outline-success
          %input{:autocomplete => "off", :name => "details-amount-directions", :type => "radio", value: "IN"}/
          IN
        %label.btn.btn-outline-danger
          %input{:autocomplete => "off", :name => "details-amount-directions", :type => "radio", value: "OUT"}/
          OUT
  .card-body
    = bar_chart amount_evaluated_movements_data_analysis_charts_path(params: opts), remote: true, thousands: "'", prefix: "â‚¬", id: 'details-amount-evaluated-movements-chart', download: true

:javascript

  var chartDetails = Chartkick.charts['details-amount-evaluated-movements-chart']
  function getDetailsdata(in_out) {
    $.ajax({
      url:
        "/data_analysis/charts/amount_evaluated_movements?filter[in_out]=" +
        in_out +
        "&group_by_day=#{opts[:group_by_day]}" +
        "&period=#{opts[:period]}" +
        "&filter[daterange]=#{opts[:filter][:daterange]}",
      success: function (data) {
        $("span#details-amount-opts").html(in_out)
        chartDetails.updateData(data)
        chartDetails.redraw()
      },
    })
  }

  $('input[type=radio][name=details-amount-directions]').change(function() {
    setClass(this.value)
    let in_out = this.value
    getDetailsdata(in_out)
  })

  function setClass(direction){
    console.log(direction)
    switch(direction) {
      case 'ALL':
        $('#card-details-amount-evaluated-movements').removeClass('card-success')
        $('#card-details-amount-evaluated-movements').removeClass('card-danger')
        $('#card-details-amount-evaluated-movements').addClass('card-warning')
        break;
      case 'IN':
        $('#card-details-amount-evaluated-movements').removeClass('card-danger')
        $('#card-details-amount-evaluated-movements').removeClass('card-warning')
        $('#card-details-amount-evaluated-movements').addClass('card-success')
        break;
      case 'OUT':
        $('#card-details-amount-evaluated-movements').removeClass('card-success')
        $('#card-details-amount-evaluated-movements').removeClass('card-warning')
        $('#card-details-amount-evaluated-movements').addClass('card-danger')
        break;
      default:
        $('#card-details-amount-evaluated-movements').removeClass('card-success')
        $('#card-details-amount-evaluated-movements').removeClass('card-danger')
        $('#card-details-amount-evaluated-movements').addClass('card-warning')
    } 
  }