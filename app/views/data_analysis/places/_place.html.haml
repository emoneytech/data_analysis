.card.card-primary
  .card-header
    %h3.card-title
      %i.fas.fa-map-marker-alt
      = t(:show_resource, resource: Place.model_name.human)
  .card-body
    %dl.form-row
      - for attribute in place.attributes.keys
        %dt.col-md-4.text-right= attribute.humanize
        %dd.col-md-8= place.attributes[attribute] && place.attributes[attribute] != '' && place.attributes[attribute] != '""'? place.attributes[attribute].to_s : ' - '
  .card-footer
    .form-row
      .col-md-6
        = link_to 'Prev', [:data_analysis, @prev] unless @prev.blank?
      .col-md-6.text-right
        = link_to 'Next', [:data_analysis, @next] unless @next.blank?

