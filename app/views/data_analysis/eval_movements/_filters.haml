.card.card-primary.card-outline.collapsed-card
  .card-header
    %h3.card-title
      %i.fa.fa-chart-bar
      = t(:filters, default: 'Filters')
    .card-tools
      %button{type: "button", class: "btn btn-tool", "data-card-widget" => "collapse"}
        %i.fas.fa-plus
  .card-body
    = simple_form_for :filter, method: :get, remote: false do |f|
      = f.input :daterange, label: 'Date range', input_html: { class: 'daterange' }, required: false
      = f.submit "Submit", disable_with: 'Submiting...', class: 'btn btn-success'
