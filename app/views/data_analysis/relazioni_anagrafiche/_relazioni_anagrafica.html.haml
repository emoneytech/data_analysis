.card.card-success.card-outline
  .card-header
    .card-title
      = fa_icon RelazioniAnagrafica.icon
      #{RelazioniAnagrafica.model_name.human}

  .card-body
    %dl.form-row
      - for attribute in relazioni_anagrafica.attributes.keys
        %dt.col-md-4.text-right= attribute.humanize
        %dd.col-md-8= relazioni_anagrafica.attributes[attribute] && relazioni_anagrafica.attributes[attribute] != '' && relazioni_anagrafica.attributes[attribute] != '""'? relazioni_anagrafica.attributes[attribute].to_s : ' - '

