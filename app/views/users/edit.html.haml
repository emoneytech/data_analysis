.row
  .col-md-12
    = simple_form_for @user do |f|
      .card.card-warning
        .card-header
          %h3.card-title
            %i.fa.fa-user
            = t(:edit_resource, resource: User.model_name.human)
          .spacer
        .card-body
          = render 'form', f: f
        .card-footer.clearfix
          = link_to t(:cancel, default: "Cancel"), users_path, class: "btn btn-warning"
          = f.submit class: "btn btn-success"

