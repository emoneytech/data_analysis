.form-row
  .col-md-12
    = simple_form_for @observed_element do |f|
      .card.card-success.card-outline
        .card-header
          %h3.card-title
            %i.fa.fa-key
            = t(:add_resource, resource: ObservedElement.model_name.human)
        .card-body
          = render 'form', f: f
        .card-footer.clearfix
          = link_to t(:cancel, default: "Cancel"), observed_elements_path, class: "btn btn-warning"
          = f.submit class: "btn btn-success"

