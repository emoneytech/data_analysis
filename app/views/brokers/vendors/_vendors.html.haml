.col-md-12
  .card.card-success.card-outline
    .card-header
      %h3.card-title
        %i.fas.fa-users
        = t(:listing_resource, resource: Vendor.model_name.human(:count => 2))
    .card-body
      = render "table", vendors: @vendors
    .card-footer.clearfix
      .row
        .col-md-4= page_entries_info @vendors
        .col-md-8= paginate @vendors, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'
