.row
  .col-md-12
    .card
      .card-header
        %h3.card-title
          %i.fa.fa-search
          = t(:filters, default: "Filters")
      .card-body
        = simple_form_for :filter, method: :get, remote: false do |f|
          = f.input :ragione_sociale, html_input: {value: params[:ragione_sociale]}
          = f.submit "Submit", disable_with: 'Submiting...', class: 'btn btn-success'

#vendors_items.row= render "vendors", vendors: @vendors
