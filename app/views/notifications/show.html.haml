.row
  .col-md-12
    .card.card-outline.card-primary
      .card-header
        %h3.card-title
          = fa_icon Notification.icon
          #{Notification.model_name.human}
      .card-body
        %dl.row
          - for attribute in @notification.attributes.keys
            %dt.col-md-4.text-right= attribute.humanize
            %dd.col-md-8= @notification.attributes[attribute] && @notification.attributes[attribute] != '' && @notification.attributes[attribute] != '""'? @notification.attributes[attribute].to_s : ' - '


