- if @opts
  .card.card-success.card-outline
    .card-header
      %h3.card-title
        = fa_icon EvaluatedMovement.icon
        Evaluations
    .card-body.p-0
      %table.table.table-striped.table-hover
        %tbody
          %tr
            %th= EvaluatedMovement.human_attribute_name(:amount_factor)
            %td.text-center.amount_factor= number_with_precision @opts["amount_factor"]
          %tr
            %th= EvaluatedMovement.human_attribute_name(:recursion_factor)
            %td.text-center.recursion_factor= number_with_precision @opts["recursion_factor"]
          %tr
            %th= EvaluatedMovement.human_attribute_name(:country_factor)
            %td.text-center.countries_factor= number_with_precision @opts["country_factor"]
          %tr
            %th= EvaluatedMovement.human_attribute_name(:product_factor)
            %td.text-center.product_factor= number_with_precision @opts["product_factor"]
          %tr
            %th= EvaluatedMovement.human_attribute_name(:evaluated_factor)
            %td.text-center.evaluated_factor.text-danger
              %strong= number_with_precision @result
