.card.card-primary.card-outline
  .card-header
    %h3.card-title= raw "#{fa_icon(ConditionalVar.icon)} #{ConditionalVar.model_name.human}: #{conditional_var.name}"
    .card-tools
      = link_to fa_icon("edit"), [:edit, :config, conditional_var], class: "btn btn-xs btn-warning", data: {toggle: "tooltip", title: t(:edit_resource, resource: conditional_var.model_name.human)}
  .card-body.p-1
    %table.table.table-striped.table-bordered.table-hover.margin-none
      %thead
        %tr
          %th= AlgorithmCalculator.human_attribute_name(:default_value)
          - conditional_var.customer_category_conditional_vars.each do |customer_category_conditional_var|
            %th.text-center= customer_category_conditional_var.customer_category
      %tbody
        %tr
          %td= conditional_var.default_value
          - conditional_var.customer_category_conditional_vars.each do |customer_category_conditional_var|
            %td.text-center{class: "#{'text-success' if customer_category_conditional_var.default}"}= customer_category_conditional_var.try(:value)
    