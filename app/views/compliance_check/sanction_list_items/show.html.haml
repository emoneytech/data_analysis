.row
  .col-md-12
    .card.card-primary.card-outline
      .card-header
        %h3.card-title
          %i.fas.fa-user-check
          = "#{SanctionListItem.model_name.human}: #{@sanction_list_item.id}"
      .card-body
        %dl.form-row
          - for attribute in @sanction_list_item.attributes.keys
            %dt.col-md-4.text-right= attribute.humanize
            %dd.col-md-8= @sanction_list_item.attributes[attribute] && @sanction_list_item.attributes[attribute] != '' && @sanction_list_item.attributes[attribute] != '""'? @sanction_list_item.attributes[attribute].to_s : ' - '


          