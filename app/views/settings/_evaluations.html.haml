.card.card-success.card-outline
  .card-header
    %h3.card-title
      = fa_icon EvaluatedMovement.icon
      Evaluations
  .card-body.p-0
    %table.table.table-striped.table-hover
      %tbody
        %tr
          %th= t(:amount_factor, default: "Amount Factor")
          %td.text-center.amount_factor_calculated> 0.00
        %tr
          %th= t(:recursion_factor, default: "Recursion Factor")
          %td.text-center.recursion_factor_calculated> 0.00
        %tr
          %th= t(:countries_factor, default: "Countries Factor")
          %td.text-center.countries_factor_calculated> 0.00
        %tr
          %th= t(:product_factor, default: "Product Factor")
          %td.text-center.product_factor_calculated> 0.00
        %tr
          %th= t(:attention_factor, default: "Attention Factor")
          %td.text-center.attention_factor_calculated.text-danger
            %strong>0.00
