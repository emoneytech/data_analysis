.card.card-info.card-outline
  .card-header
    %h3.card-title
      %i.fa.fa-chart-bar
      = t(:amount_factor_calculated, default: 'Calculated Amount Factor')
  .card-body
    %form#amount_factor_form
      .input-group
        %input#amount_factor_calculated_eq.form-control{type: "text"}
        %span.input-group-append
          %input.btn.btn-info.btn-flat{type: "submit", value: 'Go!'}>
    #plot_amount_factor
    %pre.border
      %code            
        amount_factor_calculated = factor_for_amount * 
        &nbsp;&nbsp;((amount_cents / 100).to_f / divisor_amount_for_factor)
  .card-footer
    .text-success
      Base Amount:
      %strong
        %span#amount_factor_calculated
          0.00
:javascript
  function plot_amount_line() {
    console.log('plotting...')
    const expression = $('#amount_factor_calculated_eq').val()
    draw(expression, 'plot_amount_factor', [0, 100000, 100])
  }

  $(document).ready(function() {
    document.getElementById('amount_factor_form').onsubmit = function (event) {
      event.preventDefault()
      plot_amount_line()
    }
  })
