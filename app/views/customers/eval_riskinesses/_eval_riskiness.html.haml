.col-md-6
  .card.card-primary
    .card-header
      %h3.card-title
        %i.fas.calendar
        = t(:listing_resource, resource: EvalRiskiness.model_name.human(:count => 2))
        \- #{eval_riskiness.eval_month}
    .card-body
      %dl.form-row
        - for attribute in eval_riskiness.attributes.keys
          %dt.col-md-4.text-right= attribute.humanize
          %dd.col-md-8= eval_riskiness.attributes[attribute] && eval_riskiness.attributes[attribute] != '' && eval_riskiness.attributes[attribute] != '""'? eval_riskiness.attributes[attribute].to_s : ' - '


