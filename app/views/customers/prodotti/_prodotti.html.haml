.col-md-12
  .card.card-primary.card-outline
    .card-header
      %h3.card-title
        = fa_icon Prodotto.icon
        = t(:listing_resource, resource: Prodotto.model_name.human(:count => 2))
    .card-body
      = render "table", prodotti: @prodotti
    .card-footer.clearfix
      .form-row
        .col-md-12
          = paginate @prodotti, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'
