.form-row
  .col-md-12
    .card
      .card-header
        %h3.card-title
          %i.fas.fa-microchip
          = "#{Anagrafica.model_name.human}: #{obfuscator(@anagrafica.full_name)} - "
          = "#{Prodotto.model_name.human}: #{@prodotto.nome} - "
          = Servizio.model_name.human(:count => 2)
      .card-body
        = render "table_service", servizi: @servizi
      .card-footer.clearfix
        .form-row
          .col-md-12
            = paginate @servizi, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'
