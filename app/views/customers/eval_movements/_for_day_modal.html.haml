.modal-dialog.modal-xl{role: "document"}
  .modal-content
    .modal-header.bg-primary
      .modal-title
        %i.fas.fa-exchange-alt
        = "#{@anagrafica.full_name} - "
        = t(:listing_resource, resource: EvalMovement.model_name.human(:count => 2))
      %button.close{type: "button", "data-dismiss" => "modal", "aria-label" => "Close"}
        %span{"aria-hidden" => "true"}
          &times;
    .modal-body
      = render "table", eval_movements: @eval_movements
    .modal-footer.clearfix
      .row
        .col-md-12
          = paginate @eval_movements, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0', remote: true
