.modal-dialog.modal-xl{role: "document"}
  .modal-content
    .modal-header
      .modal-title
        %i.fas.fa-exchange-alt
        = "#{@anagrafica.full_name} - "
        = t(:listing_resource, resource: EvaluatedMovement.model_name.human(:count => 2))
    .modal-body
      = render "table", evaluated_movements: @evaluated_movements
    .modal-footer.clearfix
      .row
        .col-md-12
          = paginate @evaluated_movements, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0', remote: true
