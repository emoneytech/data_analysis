.col-md-12
  .card
    .card-header
      %h3.card-title
        %i.fas.fa-exchange-alt
        = "#{obfuscator(@anagrafica.full_name)} - "
        = t(:listing_resource, resource: EvaluatedMovement.model_name.human(:count => 2))
    .card-body
      = render "table", evaluated_movements: @evaluated_movements
    .card-footer.clearfix
      .form-row
        .col-md-12
          = paginate @evaluated_movements, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'
