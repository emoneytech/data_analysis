.card.card-outline.card-primary
  .card-header
    .card-title
      = fa_icon Iban.icon
      = link_to Iban.model_name.human(count: 2), [:customers, @anagrafica, :ibans]
  .card-body.p-0
    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th= Iban.human_attribute_name(:Conto)
          %th= Iban.human_attribute_name(:Iban)
          %th= Iban.human_attribute_name(:Tipo)
          %th= Iban.human_attribute_name(:C)
          %th.action{data: {orderable: "false"}}
      %tbody
        - ibans.each do |item|
          %tr
            %td= item.Conto
            %td= item.Iban
            %td= item.Tipo
            %td= item.C
            %td.text-center
              = link_to fa_icon('eye'), customers_anagrafica_iban_path(@anagrafica.id, item.Iban), class: "btn btn-xs btn-primary", data:{toggle: "tooltip"}, title: 'Show'
  .card-footer.clearfix
    .row
      .col-md-12
        = paginate ibans, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0', param_name: :page_ibans
