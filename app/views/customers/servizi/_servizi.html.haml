.col-md-12
  .card
    .card-header
      %h3.card-title
        %i.fas.fa-microchip
        = t(:listing_resource, resource: Servizio.model_name.human(:count => 2))
    .card-body
      = render "table", servizi: @servizi
    .card-footer.clearfix
      .row
        .col-md-12
          = paginate @servizi, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0', total_pages: @cached_total_pages
