.card.card-success
  .card-header
    %h3.card-title
      %i.fa.fa-wallet
      #{Conto.model_name.human} #{@conto.id}
    .spacer
  .card-body
    %dl.row
      - for attribute in conto.attributes.keys
        %dt.col-md-4.text-right= attribute.humanize
        %dd.col-md-8= conto.attributes[attribute] && conto.attributes[attribute] != '' && conto.attributes[attribute] != '""'? conto.attributes[attribute].to_s : ' - '


