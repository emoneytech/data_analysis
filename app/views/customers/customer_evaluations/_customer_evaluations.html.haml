.col-md-12
  .card
    .card-header
      %h3.card-title
        = fa_icon CustomerEvaluation.icon 
        = "#{@anagrafica.full_name} - "
        = t(:listing_resource, resource: CustomerEvaluation.model_name.human(:count => 2))
    .card-body
      = render "table", customer_evaluations: @customer_evaluations
    .card-footer.clearfix
      .row
        .col-md-12
          = paginate @customer_evaluations, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'
