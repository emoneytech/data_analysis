.card.card-success.card-outline
  .card-header
    %h3.card-title
      = fa_icon Note.icon
      #{Note.model_name.human}
      1 of #{@anagrafica.notes.count}
    .card-tools
      = link_to(t(:add_resource, resource: Note.model_name.human), [:new, :customers, @anagrafica, :note], class: "btn btn-success btn-xs") if can? :create, Note 
  .card-body
    .card-comment
      .comment-text
        %span.username= note.user
        %span.text-muted.float-right= note.created_at.to_s(:short)
        %hr
        %strong= note.subject
        %p= note.body
  .card-footer
    .row
      .col-md-6
        = link_to 'Prev', customers_anagrafica_note_path(@anagrafica, note.previous), remote: true unless note.previous.blank?
      .col-md-6.text-right
        = link_to 'Next', customers_anagrafica_note_path(@anagrafica, note.next), remote: true unless note.next.blank?


