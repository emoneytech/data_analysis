.card.card-success.card-outline
  .card-header
    %h3.card-title
      = fa_icon Note.icon
      #{Note.model_name.human} #{note.subject}

  .card-body
    %dl.form-row
      - for attribute in note.attributes.keys
        %dt.col-md-4.text-right= attribute.humanize
        %dd.col-md-8= note.attributes[attribute] && note.attributes[attribute] != '' && note.attributes[attribute] != '""'? note.attributes[attribute].to_s : ' - '

