.card.card-outline.card-primary
  .card-header
    .card-title
      %i.fas.fa-exclamation-triangle
      = link_to @anagrafica.full_name, [:customers, @anagrafica] 
      = t(:listing_resource, resource: CustomerSetting.model_name.human(:count => 2))
    .card-tools
  .card-body
    %dl.row
      - for attribute in customer_setting.attributes.keys
        %dt.col-md-4.text-right= attribute.humanize
        %dd.col-md-8= customer_setting.attributes[attribute] && customer_setting.attributes[attribute] != '' && customer_setting.attributes[attribute] != '""'? customer_setting.attributes[attribute].to_s : ' - '


= render "base/audits", audits: customer_setting.audits if customer_setting.audits.any?