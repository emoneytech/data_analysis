.col-md-12
  .card
    .card-header
      %h3.card-title
        %i.fas.fa-users
        = "#{obfuscator(@anagrafica.full_name)} - "
        = t(:listing_resource, resource: CustomerSetting.model_name.human(:count => 2))
      .card-tools
        = link_to(t(:add_resource, resource: CustomerSetting.model_name.human), [:new, :customers, @anagrafica, :customer_setting], class: "btn btn-success") if can? :create, Role
    .card-body
      = render "table", customer_settings: @customer_settings
    .card-footer.clearfix
      .form-row
        .col-md-12
          = paginate @customer_settings, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'
