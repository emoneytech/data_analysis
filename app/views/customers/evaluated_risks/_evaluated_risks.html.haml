.col-md-12
  .card
    .card-header
      %h3.card-title
        %i.fas.fa-users
        = "#{@anagrafica.full_name} - "
        = t(:listing_resource, resource: EvaluatedRisk.model_name.human(:count => 2))
    .card-body
      = render "table", evaluated_risks: @evaluated_risks
    .card-footer.clearfix
      .row
        .col-md-12
          = paginate @evaluated_risks, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'
