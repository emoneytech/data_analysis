.card.card-outline.card-success
  .card-header
    %h3.card-title
      = fa_icon WebpushSubscription.icon
      #{WebpushSubscription.model_name.human(:count => 2)}
    .card-tools
      = link_to "#{fa_icon("eye")} Show".html_safe, [@user, :webpush_subscriptions], class: 'btn btn-xs btn-success'
  .card-body.p-1
    = render "/webpush_subscriptions/table", webpush_subscriptions: webpush_subscriptions
  .card-footer.clearfix
    .row
      .col-md-4
        = page_entries_info webpush_subscriptions
      .col-md-8.text-right
        = paginate webpush_subscriptions, theme: 'twitter-bootstrap-4', nav_class: "float-right", pagination_class: 'm-0'